<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:visibility="visible"
    card_view:cardCornerRadius="5dp"
    tools:visibility="visible">

    <RelativeLayout
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/plantNameCardView"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="20dp"
            android:fontFamily="cursive"
            android:text="Wild Carrot"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/plantImageView"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_below="@id/plantNameCardView"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="QoS level : "
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/deletePlantBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44dp"
            android:layout_toRightOf="@+id/plantImageView"
            android:clickable="true"
            android:src="@drawable/ic_baseline_delete_forever_24"
            card_view:backgroundTint="@color/white"
            card_view:rippleColor="@color/design_default_color_error" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>