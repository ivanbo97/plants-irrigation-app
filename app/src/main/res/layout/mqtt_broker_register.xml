<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/mqtt_broker_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Broker Name" />

    <EditText
        android:id="@+id/mqtt_broker_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mqtt_broker_name"
        android:hint="MQTT broker IP" />

    <EditText
        android:id="@+id/mqtt_broker_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mqtt_broker_ip"
        android:layout_alignParentStart="true"
        android:hint="Port Number"
        android:inputType="textPassword" />

</RelativeLayout>