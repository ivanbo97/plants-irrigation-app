<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navmenu.home.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/plantImageHomeMenu"
            android:layout_width="160dp"
            android:layout_height="174dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:id="@+id/plantInfoTv"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/delius"
            android:text="@string/plant_info_title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/scientificNameTitleTv"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_toRightOf="@+id/plantImageHomeMenu"
            android:fontFamily="@font/delius"
            android:text="@string/scientific_name_tv_title"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/plantScientificName"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scientificNameTitleTv"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/plantImageHomeMenu"
            android:fontFamily="@font/delius"
            android:textSize="14sp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>