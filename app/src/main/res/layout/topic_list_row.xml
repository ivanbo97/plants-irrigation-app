<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:visibility="visible"
    card_view:cardCornerRadius="5dp"
    tools:visibility="visible">

    <RelativeLayout
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/topicNameCardView"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"

            android:fontFamily="serif"
            android:text="test/topic"
            android:textAlignment="textStart"
            android:textSize="15sp"
            android:textStyle="bold" />


        <View
            android:id="@+id/verticalBarTopic"
            android:layout_width="2dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/topicNameCardView"
            android:background="#555555" />

        <TextView
            android:id="@+id/topicQoSCardView"
            android:layout_width="88dp"
            android:layout_height="64dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/verticalBarTopic"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="QoS level : "
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/deleteTopicBtn"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/topicQoSCardView"
            android:clickable="true"
            card_view:backgroundTint="@color/white"
            card_view:rippleColor="@color/design_default_color_error"
            android:src="@drawable/ic_baseline_delete_forever_24" />

        <Button
            android:id="@+id/subscribeTopicBtn"
            android:layout_width="64dp"
            android:layout_height="36dp"
            android:layout_below="@id/topicNameCardView"
            android:layout_marginTop="12dp"
            android:text="@string/subsBtnString" />

        <Button
            android:id="@+id/unsubscribeTopicBtn"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="69dp"
            android:layout_toRightOf="@id/subscribeTopicBtn"
            android:text="@string/unsubscribeBtnString" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>